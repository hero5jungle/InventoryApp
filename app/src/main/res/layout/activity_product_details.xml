<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductDetails">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Name"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/detail_product_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Price"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/detail_product_price"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Quantity"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/detail_product_quantity"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Supplier Name"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/detail_supplier_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Supplier Phone Number"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/detail_supplier_number"/>

</LinearLayout>